{
  "compilerOptions": {
    "declaration": false,
    "esModuleInterop": true,
    "incremental": true,
    "lib": ["es2020"],
    "module": "es2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "strict": true,
    "target": "es2020",
    "preserveSymlinks": true
  },
  "include": ["src"]
}
